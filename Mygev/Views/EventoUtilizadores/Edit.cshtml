@model Mygev.Models.EventoUtilizadores

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EventoUtilizadores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="IDUser" class="control-label"></label>
                <input class="form-control" readonly value="@ViewBag.IDUser" />
            </div>
            <div class="form-group">
                <label asp-for="IDEvento" class="control-label"></label>
                <input class="form-control" readonly value="@ViewBag.IDEvento" />
            </div>
            <div class="form-group">
                <label asp-for="Permissao" class="control-label"></label>
                <select asp-for="Permissao" class="form-control">
                    <option value="Administrador">Administrador</option>
                    <option value="Participante Contribuidor">Participante Contribuidor</option>
                    <option value="Participante">Participante</option>

                </select>
                <span asp-validation-for="Permissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
